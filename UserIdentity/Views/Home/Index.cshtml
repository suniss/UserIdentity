    ViewData["Title"] = "Home Page";
}
@User
@if(User.Identity.IsAuthenticated)
            {
                <span>Authenticated</span>
    if(User.IsInRole("Admin"))
                {
                    <span>User is Admin</span>
    }else
                {
                    <span>User is not Admin</span>
                }
}
else
{
                <span>Not Authenticated</span>
            }
